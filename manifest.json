{
  "manifest_version": 3,
  "name": "Google Play Store Çeviri Asistanı",
  "version": "1.0",
  "description": "Google Play Console'da otomatik çeviri işlemleri için AI destekli asistan",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://play.google.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://play.google.com/console/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Google Play Store Çeviri Asistanı",
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png"
    }
  },
  "side_panel": {
    "default_path": "side_panel.html"
  }
}
